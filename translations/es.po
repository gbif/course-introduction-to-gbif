#: gbif-mediated-data.en.adoc:135
#, no-wrap
msgid "img/web/gofairlogo.svg"
msgstr "img/web/gofairlogo.svg"

#. type: Target for macro image
#: gbif-mediated-data.en.adoc:137
#, no-wrap
msgid "img/web/FairPrinciples2.png"
msgstr "img/web/FairPrinciples2.png"

#. type: Plain text
#: gbif-mediated-data.en.adoc:140
#, no-wrap
msgid "*Data found on GBIF.org are FAIR.*\n"
msgstr "*Los datos que se encuentran en GBIF.org son FAIR.*\n"

#. type: delimited block *
